<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTNlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:background="@drawable/button_design"
        android:elevation="30dp"
        android:padding="8dp"
        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#F44336"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/IV_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/BTNlogout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTNCreateAdvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IV_logo"
        android:layout_marginTop="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_design"
        android:elevation="30dp"
        android:padding="20dp"
        android:text="CREATE A NEW ADVERT"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTNShowItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTNCreateAdvert"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_design"
        android:elevation="30dp"
        android:padding="20dp"
        android:text="SHOW ALL LOST AND FOUND ITEMS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTNShowOnMap_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BTNShowItems"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_design"
        android:elevation="30dp"
        android:padding="20dp"
        android:text="SHOW ON MAP"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>
